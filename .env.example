# cp .env.example .env.local 후 실제 값 채우기

# ── 카카오 OAuth ──────────────────────────────────────────────
KAKAO_REST_API_KEY=           # 카카오 개발자 콘솔 → REST API 키
NEXT_PUBLIC_KAKAO_REST_API_KEY=  # 클라이언트용 (서버 키와 동일)
KAKAO_REDIRECT_URI=           # 예: http://localhost:3000/api/auth/kakao/callback
NEXT_PUBLIC_KAKAO_REDIRECT_URI=  # 클라이언트용 (동일 값)

# ── 카카오 알림톡 (NHN Cloud 기준) ───────────────────────────
KAKAO_ALIMTALK_APP_KEY=       # NHN Cloud AppKey
KAKAO_ALIMTALK_SENDER_KEY=    # 카카오 채널 SenderKey

# ── Supabase ─────────────────────────────────────────────────
SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=

# ── 앱 기본 설정 ──────────────────────────────────────────────
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_ENV=development    # development | staging | production
